<div class="container">
  <% if(error && error.length > 0){ %>
    <div class="alert alert-danger" style="margin-top: 1rem;" role="alert">
        <% if(error.length < 2){ %>
            <%= error[0] %>
        <% } else { %>
          <ul>     
          <% for (let i = 0; i < error.length; i++) { %>
            <li><%= error[i] %></li>
          <% } %>
        <% } %>
        </ul>
    </div>
    <% } else if(success && success.length > 0) { %>
      <div class="alert alert-success" role="alert">
        <%= success %>
      </div>
      <% } %>
</div>