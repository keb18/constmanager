<div class="container-fluid">
  <h4>
    <i class="fa fa-fw fa-calendar-alt plm"></i>Timesheets
  </h4>
  <h6>
      <i class="fa fa-fw fa-question" 
      data-toggle="tooltip"
      data-html="true"  
      data-placement="right" 
      title="
      <div class='text-justify'>
      Codes for non-projects: <br/>
      Holidays: hol <br/>
      Public holiday: phl <br/>
      Training: tra <br/>
      Doctor: doc <br/>
      Sick time: sck <br/>
      </div>"></i>
      <%= currentCompany %>
  </h6>
 
  <div class="container sheetPick">
    <div class="row no-gutters">
      <div class="col-auto">
        <h5>
          <a class="fa fa-fw fa-chevron-left previousSheet" href="#" style="text-decoration: none;"></a>
        </h5>
      </div>
      <div class="col-auto">
        <h5>Week starting:</h5>
      </div>
      <div class="col-auto datePicker">
        <h5><input type="text" name="date" id="timesheetDate"></h5>
      </div>
      <div class="col-auto">
        <h5>
          <a class="fa fa-fw fa-chevron-right nextSheet" href="#" style="text-decoration: none;"></a>
        </h5>
      </div>
    </div>
  </div>
</div>



<link rel="stylesheet" href="/css/timesheets.css">
<!-- <link rel="stylesheet" href="/css/timesheets.min.css"> -->
<link rel="stylesheet" href="/vendor/css/DatePickerX.css">
